# AI Backend Environment Configuration
# Copy this file to .env and fill in your API keys

# HuggingFace API Key (required for AI functionality)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=false

# CORS Configuration (adjust for production)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API Configuration
API_VERSION=1.0.0
API_TITLE="Financial AI Assistant Backend"
API_DESCRIPTION="Backend API for the Financial AI Assistant mobile application"

# Development Settings
RELOAD_ON_CHANGE=false
AUTO_RELOAD=false